pulumi new kubernetes-typescript -y
pulumi stack select <stack-name>

civo kubernetes config gitpod-test2 -s

flux bootstrap github \
  --owner=$GITHUB_USER \
  --repository=fleet-infra \
  --branch=main \
  --path=./clusters/my-cluster \
  --personal
          DNS A record : e25905be-fd85-4059-b948-8258536c8b5f.k8s.civo.com


flux create source git podinfo \
  --url=$URL \
  --branch=main \
  --interval=30s \
  --export > ./clusters/my-cluster/podinfo-source.yaml

flux create kustomization podinfo \
  --target-namespace=default \
  --source=podinfo \
  --path="./kustomize" \
  --prune=true \
  --interval=5m \
  --export > ./clusters/my-cluster/podinfo-kustomization.yaml
k delete --all pods -n default
helm repo add prometheus-community https://prometheus-community.github.io/helm-charts
helm repo update

cd prom-stack
helm install -f values.yaml prom-stack prometheus-community/kube-prometheus-stack -n prom-stack
